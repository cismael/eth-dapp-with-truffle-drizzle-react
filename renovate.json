{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": ["develop"],
  "packageRules": [
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react packages"
    },
    {
      "packageNames": ["@drizzle/react-components", "@drizzle/react-plugin", "@drizzle/store"],
      "groupName": "drizzle packages"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
